{
  "name": "raspberry-pi-led",
  "author": "Oron Nadiv <oron@nadiv.us> (https://github.com/OronNadiv/)",
  "homepage": "https://github.com/OronNadiv/raspberry-pi-led/",
  "bugs": "https://github.com/OronNadiv/raspberry-pi-led/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/OronNadiv/raspberry-pi-led.git"
  },
  "license": "AGPL-3.0",
  "version": "1.0.0",
  "description": "Promise based, raspberry pi LED controller.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && babel src --out-dir dist --source-maps --minified",
    "cover": "istanbul cover _mocha -- --recursive -t 10000",
    "lint": "eslint .",
    "prepublish": "npm run build",
    "test": "mocha --recursive -t 10000 && npm run lint",
    "test-coveralls": "istanbul cover _mocha --report lcovonly -- --recursive -t 10000 -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "bluebird": "^3",
    "debug": "^3.1.0",
    "diehard": "^1.5.2",
    "pi-gpio": "^0.0.8"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "chance": "^1.0.11",
    "coveralls": "^3.0.0",
    "eslint": "^4.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "mockery": "^2.1.0",
    "rimraf": "^2.6.2",
    "should": "^13.1.1"
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
